<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.offlinedocumenthub.RegisterController"
            style="-fx-background-color: #f4f6f8;">
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Offline Document Hub" style="-fx-font-size:20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="40"/>
                <ColumnConstraints percentWidth="60"/>
            </columnConstraints>

            <VBox GridPane.columnIndex="0" alignment="CENTER" spacing="15">
                <ImageView fitWidth="160" fitHeight="160"/>
                <Label text="Create an Account" style="-fx-font-size:18px; -fx-font-weight: bold;"/>
                <Label text="Join our community" style="-fx-font-size:14px; -fx-text-fill: #555555;"/>
            </VBox>

            <VBox GridPane.columnIndex="1" spacing="15" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>
                <effect>
                    <DropShadow radius="8" color="rgba(0,0,0,0.1)"/>
                </effect>

                <Label text="Register" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 250;"/>
                <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 250;"/>
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250;"/>

                <HBox spacing="15">
                    <Button fx:id="registerButton" onAction="#onRegister" text="Sign up" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button text="Back to Login" onAction="#onBackToLogin" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                </HBox>

                <Label fx:id="msgLabel" textFill="red"/>
            </VBox>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Version 0.1" style="-fx-text-fill: #555555;"/>
        </HBox>
    </bottom>

</BorderPane>
