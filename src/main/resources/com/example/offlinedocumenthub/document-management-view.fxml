<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.offlinedocumenthub.DocumentManagementController"
      spacing="15" style="-fx-background-color: #f4f6f8; -fx-padding: 20;">

    <!-- User Info Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="lblUserInfo" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Main Content -->
    <HBox spacing="10">
        <Label text="Document Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search by title, uploader..."/>
        <Button text="Add Document" onAction="#onAddDocument" style="-fx-background-color: #1abc9c; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="documentTable" prefHeight="500" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
            <TableColumn fx:id="colFilePath" text="File Path" prefWidth="250"/>
            <TableColumn fx:id="colUploadedBy" text="Uploaded By" prefWidth="150"/>
            <TableColumn fx:id="colDate" text="Upload Date" prefWidth="150"/>
            <TableColumn fx:id="colFileSize" text="Size" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Sync to Cloud" onAction="#onSyncCloud" style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
        <Button text="Refresh" onAction="#onRefresh" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
    </HBox>
</VBox>