<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.offlinedocumenthub.AdminDashboardController"
            style="-fx-background-color: #f0f2f5;"
            prefWidth="1200" prefHeight="700">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Offline Document Hub" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblWelcome" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-wrap-text: true;"/>
            <Button text="Logout" onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10;"/>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
        <VBox fx:id="leftMenu" spacing="8" style="-fx-background-color: #34495e; -fx-padding: 15;" prefWidth="180">
            <Button text="ðŸ”„ Refresh" onAction="#refreshDashboard"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>

            <Button fx:id="btnBack" text="Dashborad" onAction="#onBackToDashboard"
                    style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>
            <Button fx:id="btnUsers" text="ðŸ‘¥ Users" onAction="#showUserManagement"
                    style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>
            <Button fx:id="btnDocuments" text="ðŸ“ Documents" onAction="#showDocumentManagement"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>
            <Button fx:id="btnActivityLogs" text="ðŸ“Š Activity Logs" onAction="#showActivityLogs"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>
            <Button fx:id="btnSystemControl" text="âš™ï¸ System / Cloud" onAction="#showSystemControl"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"
                    maxWidth="Infinity" wrapText="true"/>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                    style="-fx-background: #f0f2f5; -fx-border-color: transparent;">
            <StackPane fx:id="contentPane" style="-fx-padding: 15;">
                <!-- Default welcome content that shows when no module is selected -->
                <VBox fx:id="welcomePane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8;"
                      maxWidth="900">

                    <!-- Welcome Header -->
                    <VBox spacing="8">
                        <Label text="Welcome to Offline Document Hub"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-wrap-text: true;"/>
                        <Label fx:id="lblUserWelcome" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-wrap-text: true;"/>
                    </VBox>

                    <!-- Statistics Cards - Responsive Grid -->
                    <GridPane hgap="15" vgap="15" maxWidth="800">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33" maxWidth="250"/>
                            <ColumnConstraints percentWidth="33" maxWidth="250"/>
                            <ColumnConstraints percentWidth="33" maxWidth="250"/>
                        </columnConstraints>

                        <!-- Documents Card -->
                        <VBox fx:id="documentsCard" style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 8;"
                              GridPane.columnIndex="0" maxWidth="250">
                            <Label text="Documents" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-wrap-text: true;"/>
                            <Label fx:id="lblDocumentCount" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Total Files" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 11px;"/>
                        </VBox>

                        <!-- Users Card (Only for Admin) -->
                        <VBox fx:id="usersCard" style="-fx-background-color: #1abc9c; -fx-padding: 15; -fx-background-radius: 8;"
                              GridPane.columnIndex="1" maxWidth="250">
                            <Label text="Users" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-wrap-text: true;"/>
                            <Label fx:id="lblUserCount" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Registered" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 11px;"/>
                        </VBox>

                        <!-- Activity Card (Only for Admin) -->
                        <VBox fx:id="activityCard" style="-fx-background-color: #9b59b6; -fx-padding: 15; -fx-background-radius: 8;"
                              GridPane.columnIndex="2" maxWidth="250">
                            <Label text="Activities" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-wrap-text: true;"/>
                            <Label fx:id="lblActivityCount" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Logged" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 11px;"/>
                        </VBox>
                    </GridPane>

                    <!-- Quick Actions -->
                    <VBox spacing="12">
                        <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <FlowPane hgap="10" vgap="10" prefWrapLength="800">
                            <Button fx:id="btnQuickUpload" text="ðŸ“ Upload Document" onAction="#quickUpload"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 12px;"
                                    wrapText="true" maxWidth="200"/>
                            <Button fx:id="btnQuickViewDocs" text="ðŸ“‹ View My Documents" onAction="#showDocumentManagement"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 12px;"
                                    wrapText="true" maxWidth="200"/>
                            <Button fx:id="btnQuickUsers" text="ðŸ‘¥ Manage Users" onAction="#showUserManagement"
                                    style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 12px;"
                                    wrapText="true" maxWidth="200"/>
                        </FlowPane>
                    </VBox>

                    <!-- Project Information -->
                    <VBox spacing="8" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label text="About Offline Document Hub" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Text fx:id="txtProjectInfo" wrappingWidth="750" style="-fx-font-size: 13px; -fx-text-fill: #34495e;">
                            Offline Document Hub is a secure document management system that allows users to store,
                            manage, and share documents within an organization. The system provides role-based access
                            control, activity logging, and cloud backup capabilities.
                        </Text>
                        <GridPane hgap="20" vgap="5" style="-fx-padding: 10 0 0 0;">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                            <VBox spacing="3" GridPane.columnIndex="0">
                                <Label text="âœ“ Secure Document Storage" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                <Label text="âœ“ Role-Based Access Control" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                <Label text="âœ“ Activity Monitoring" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                            </VBox>
                            <VBox spacing="3" GridPane.columnIndex="1">
                                <Label text="âœ“ File Version Control" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                <Label text="âœ“ Cloud Backup" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                <Label text="âœ“ Cross-Platform" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <!-- System Status -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="3">
                            <Label text="System Status" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <VBox spacing="5">
                                <Label fx:id="lblServerStatus" text="â— Server: Online" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                <Label fx:id="lblDatabaseStatus" text="â— Database: Connected" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                            </VBox>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="lblLastLogin" text="Last login: Today" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-font-size: 12px;"/>
                    </HBox>
                </VBox>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>