<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.offlinedocumenthub.AdminDashboardController"
            style="-fx-background-color: #f0f2f5;">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Admin Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Button text="Users" onAction="#showUserManagement" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold;" maxWidth="Infinity"/>
            <Button text="Documents" onAction="#showDocumentManagement" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" maxWidth="Infinity"/>
            <Button text="Activity Logs" onAction="#showActivityLogs" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" maxWidth="Infinity"/>
            <Button text="System / Cloud" onAction="#showSystemControl" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;">
            <!-- Sub-module content will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
