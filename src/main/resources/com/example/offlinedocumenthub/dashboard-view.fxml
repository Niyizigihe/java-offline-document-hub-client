<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.offlinedocumenthub.DashboardController"
            style="-fx-background-color:#ffffff;">

    <top>
        <ToolBar>
            <Label text="Offline Document Hub" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Sync (admin)" onAction="#onSync"/>
            <Button text="Logout" onAction="#onLogout"/>
        </ToolBar>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding:10;">
            <Button text="Documents" maxWidth="Infinity" onAction="#showDocuments"/>
            <Button text="Chat" maxWidth="Infinity" onAction="#showChat"/>
            <Button text="Users (admin)" maxWidth="Infinity" onAction="#showUsers"/>
            <Button text="Backup" maxWidth="Infinity" onAction="#showBackup"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-padding:10;">
            <Label text="Welcome to the dashboard. Select a module from the left." wrapText="true"/>
        </StackPane>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding:10;">
            <Label text="Status: "/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
